doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    header.banner(style=`background-image: url('/images/${heroImage || 'plant-banner.jpg'}'); background-size: cover; background-position: right center; padding: 80px 20px; text-align: right; color: white;`)
      h1= title
      p.tagline= tagline
      p.subtitle India's 1st MasterChef-Style Kitchen

    

    if features
      section.features
        h2.section-title Why Choose Us
        div.features-grid
          each f in features
            div.feature
              h3.feature-title= f.title
              p.feature-desc= f.desc

    if featuredCourses
      section.courses
        h2.section-title Featured Courses
        div.courses-grid
          each c in featuredCourses
            div.course-card
              img(src=`/images/${c.imgSrc}`, alt=c.name)
              h3.course-name= c.name
              p.course-meta #{c.type} · #{c.mode}
              p.course-dates= c.dates
              if waNumber
                a.button.button-link(href=`https://wa.me/${waNumber}?text=Hi!%20I%20want%20details%20for%20${encodeURIComponent(c.name)}`) Enroll on WhatsApp

    section.contact-form
      h2.section-title Enquiry
      form(action=`https://wa.me/${waNumber}`, method="get")
        input(type="hidden", name="text", value="Hi! I have an enquiry about your courses.")
        button.button.button-link(type="submit") WhatsApp Us

    if courses
      section.courses
        h2.section-title Upcoming Courses
        div.courses-grid
          each c in courses
            div.course-card
              img(src=`/images/${c.imgSrc}`, alt=c.name)
              h3.course-name= c.name
              p.course-meta #{c.type} · #{c.mode}
              p.course-dates= c.dates
              if waNumber
                a.button.button-link(href=`https://wa.me/${waNumber}?text=Hi!%20I%20want%20details%20for%20${encodeURIComponent(c.name)}`) Enroll on WhatsApp

    footer.contact
      p WhatsApp us at #{whatsapp} to enroll or ask about courses.
